{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "diagnostics": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
